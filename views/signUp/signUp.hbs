                                <a href="/login"  class="text-info">Already a user? Login here</a>
                            </div>
                        </form>
                
                        
                      
                    </div>
                </div>
            </div>
        </div>
    </div>

<script>
    var errorName = document.getElementById('nameerr')
    var errorEmail = document.getElementById('emailerr')
    var errorPassword = document.getElementById('passworderr')
     var errorCnfPassword = document.getElementById('cnfPassworderr')

       function validEmail() {
        const name = document.getElementById('emailId').value
        if (name == "") {
            errorEmail.innerHTML = "enter you email address"
            return false


        }
        if (!name.match(/^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,3})+$/)) {
            errorEmail.innerHTML = 'enter a proper email adress'
            return false
        }

        errorEmail.innerHTML = null
        return true
    }
    function validateName() {
    
        const name = document.getElementById('username').value;
        if (name == "") {
            errorName.innerHTML = 'Enter your Name'
            return false
        }
        if (!name.match(/^[a-zA-Z]*$/)) {
            errorName.innerHTML = 'Numbers and symbols are not allowed'
            return false
        }
        errorName.innerHTML = null
        return true

    }
 

    function validPassowrd() {
        const name = document.getElementById('password').value
        if (name == "") {
            errorPassword.innerHTML = "enter a password"
            return false
        }
        if (name.length < 3) {
            errorPassword.innerHTML = "password should be more than three characters"
            return false
        }
        errorPassword.innerHTML = null
        return true
    }
      function validConfirmPassowrd() {
        const name = document.getElementById('cnfPassword').value
         const cnfname = document.getElementById('password').value
        if (name == "") {
            errorCnfPassword.innerHTML = "re-enter  password"
            return false
        }
        if (name.length < 3) {
            errorCnfPassword.innerHTML = "password should be more than three characters"
            return false
        }
        if( name!=cnfname){
               errorCnfPassword.innerHTML = "password doesnt  match"
                 return false
        }
        errorCnfPassword.innerHTML = null
        return true
    }


    function validation() {
        if (   !validEmail() &&!validateName() && !validPassowrd() &&!validConfirmPassowrd()   ) {
            return false
        }else if( !validEmail() ||!validateName() || !validPassowrd()||!validConfirmPassowrd()   ){
           return false
        }else{   return true}

    }
</script>