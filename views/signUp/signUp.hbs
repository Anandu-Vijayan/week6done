

    <div id="login">
        <h3 class="text-center text-white pt-5"></h3>
        <div class="container">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">
                        <form id="login-form" class="form" action="/signup" method="post">
                            <h3 class="text-center text-info">Register</h3>
                                <div style="height: 30px;"> 
                                    {{#if signupError}}
                                    <h5 class="text-danger" style="text-align:center ;">   {{signupError}}</h5>
                                    {{/if}}
                                     </div>

                            <div class="form-group mt-3">
                                <label for="email"  class="text-info">Email:</label><br>
                                <input type="email" name="email" id="emailId" onkeyup="validEmail()" class="form-control">
                              <span id="emailerr" class="text-danger"></span>
                            </div>
                            <div class="form-group mt-3">
                                <label id="names" for="username" class="text-info">Username:</label><br>
                                <input type="text" name="username" id="username"  onkeyup="validateName()" class="form-control">
                                   <span id="nameerr" class="text-danger"></span>
                            </div>
                            <div class="form-group mt-3">
                                <label for="Password" class="text-info">Create password:</label><br>
                                <input type="password" name="password" id="password"     onkeyup="validPassowrd()"  class="form-control">
                                    <span id="passworderr" class="text-danger"></span>
                            </div>
                             <div class="form-group mt-3">
                                <label for="password" class="text-info" >Re-enter password: </label><br>
                                <input type="password"  name="confirm_password"    onkeyup="validConfirmPassowrd()"  id="cnfPassword" class="form-control">
                                  <span id="cnfPassworderr" class="text-danger"></span>
                            </div>
                            <div class="form-group mt-3">
                                <label for="remember-me" class="text-info"><span>Remember me</span>Â <span><input id="remember-me" name="remember-me" type="checkbox"></span></label><br>
                                <input  type="submit"   onclick="return validation()" name="submit" class="btn btn-info btn-md mt-3" value="Register">
                            </div>
